{
    "name": "most-focus",
    "productName": "MO:ST Zeitmanagement",
    "version": "1.0.0",
    "description": "MO:ST Zeitmanagement â€” Aufgaben, Timer, Fokus, Analytics.",
    "main": "main.js",
    "author": "",
    "license": "MIT",
    "scripts": {
        "start": "electron .",
        "dev": "electron .",
        "pack": "electron-packager . 'MO:ST Zeitmanagement' --platform=darwin --arch=x64,arm64 --icon=assets/icon.icns --overwrite",
        "dist": "electron-builder --mac --universal",
        "dist:dmg": "electron-builder --mac dmg --universal",
        "icon:icns": "npx png2icons assets/icon.png assets/icon -icns -fix",
        "icon:all": "npm run icon:icns"
    },
    "build": {
        "appId": "com.most.zeitmanagement",
        "productName": "MO:ST Zeitmanagement",
        "directories": {
            "output": "dist"
        },
        "mac": {
            "icon": "assets/icon.icns",
            "category": "public.app-category.productivity",
            "hardenedRuntime": false,
            "gatekeeperAssess": false,
            "entitlements": false,
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "universal"
                    ]
                }
            ]
        },
        "publish": {
            "provider": "github",
            "owner": "mlvps",
            "repo": "most-zeitmanagement",
            "private": false
        },
        "dmg": {
            "title": "MO:ST Zeitmanagement",
            "icon": "assets/icon.icns",
            "background": null,
            "window": {
                "width": 540,
                "height": 380
            },
            "contents": [
                {
                    "x": 140,
                    "y": 200,
                    "type": "file"
                },
                {
                    "x": 400,
                    "y": 200,
                    "type": "link",
                    "path": "/Applications"
                }
            ]
        }
    },
    "dependencies": {
        "electron-store": "^9.0.0",
        "electron-updater": "^6.6.2"
    },
    "devDependencies": {
        "@electron/notarize": "^3.0.2",
        "electron": "^31.2.0",
        "electron-builder": "^26.0.12"
    }
}
